                <div class="event-detail"><strong>Organizer:</strong> ${event.organizer}</div>
                <div class="event-detail"><strong>Date:</strong> ${event.date}</div>
                <div class="event-detail"><strong>Time:</strong> ${event.time}</div>
                <div class="event-detail"><strong>Venue:</strong> ${event.venue}</div>
                <div class="event-detail"><strong>Description:</strong> ${event.description}</div>
            </div>
        </c:forEach>
    </div>

    <!-- Modal Form -->
    <div id="eventModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="toggleForm()">&times;</span>
