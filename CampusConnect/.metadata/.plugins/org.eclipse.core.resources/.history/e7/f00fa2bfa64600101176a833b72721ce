    <script>
        function toggleForm() {
            var modal = document.getElementById("eventModal");
            modal.style.display = modal.style.display === "block" ? "none" : "block";
        }

        window.onclick = function(event) {
            var modal = document.getElementById("eventModal");
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
