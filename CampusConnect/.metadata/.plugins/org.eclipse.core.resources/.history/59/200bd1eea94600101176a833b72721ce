package com.campusconnect.servlets;

import com.campusconnect.dao.EventDao;
import com.campusconnect.model.Event;

import javax.servlet.*;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.*;
import java.io.IOException;
import java.util.List;
@WebServlet("/viewEvents")

public class ViewEventServlet extends HttpServlet {
    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        EventDao dao = new EventDao();
        List<Event> events = dao.getAllEvents();

        request.setAttribute("events", events);
        RequestDispatcher dispatcher = request.getRequestDispatcher("event.jsp");
        dispatcher.forward(request, response);
    }
}
