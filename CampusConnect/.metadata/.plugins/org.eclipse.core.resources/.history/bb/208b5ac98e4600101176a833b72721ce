package com.campusconnect.dao;

import com.campusconnect.model.Notes;
import java.sql.*;
import java.util.*;

public class NotesDao {
    private Connection conn;

    public NotesDao(Connection conn) {
        this.conn = conn;
    }

    public boolean uploadNote(Notes note) {
        String sql = "INSERT INTO notes (title, file_path) VALUES (?, ?)";
        try (PreparedStatement ps = conn.prepareStatement(sql)) {
            ps.setString(1, note.getTitle());
            ps.setString(2, note.getFilePath());
            return ps.executeUpdate() > 0;
        } catch (Exception e) {
            e.printStackTrace();
        }
        return false;
    }

    public List<Notes> getAllNotes() {
        List<Notes> list = new ArrayList<>();
        String sql = "SELECT * FROM notes ORDER BY upload_time DESC";
        try (PreparedStatement ps = conn.prepareStatement(sql);
             ResultSet rs = ps.executeQuery()) {
            while (rs.next()) {
                Notes n = new Notes();
                n.setId(rs.getInt("id"));
                n.setTitle(rs.getString("title"));
                n.setFilePath(rs.getString("file_path"));
                n.setUploadTime(rs.getString("upload_time"));
                list.add(n);
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
        return list;
    }
}
